# -*- coding: utf-8 -*-
from persona import Persona


class Profesor(Persona):
    """Hereda de la clase Persona"""

    def __init__(self, nombre="Pepe", materia="Lengua"):
        """Recibe dos parámetros:
            * nombre
            * materia
        """
        self.materia = materia
        self.nombre = nombre

    def presentar(self):
        """El docente se presenta con un mensaje en la pantalla, además indica cual es su materia"""
        print "Hola soy el profesor de " + self.materia + " me llamo " + self.nombre
